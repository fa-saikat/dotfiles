set inputbar-fg                 "#c2c2c2" # fg

set statusbar-bg                "#2e3336" # bg2
set statusbar-fg                "#bfddb2" # fg

set highlight-color             "#deb974" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#2e3336" # bg
set default-fg                  "#bfddb2" # fg
set render-loading              true
set render-loading-bg           "#2e3336" # bg
set render-loading-fg           "#bfddb2" # fg

# Recolor book content's color
set recolor-lightcolor          "#2e3336" # bg
set recolor-darkcolor           "#bfddb2" # fg
set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
#
#
set adjust-open width
set recolor true

map <Left> navigate previous
map <Right> navigate next
map <C-=> zoom in
map <C--> zoom out
map B jumplist backward
map b jumplist forward
