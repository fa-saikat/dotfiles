#################################################################
# SUPER + FUNCTION KEYS
#################################################################
super + Home
    bash $HOME/.local/bin/scripts-menu/scripts-menu.sh

super + F2
    bash ~/.local/bin/sysact

super + F11
    bash ~/.local/bin/runScripts

#################################################################
# SUPER + ... KEYS
#################################################################

super + comma
    sh $HOME/.local/bin/sm-emojies/emojies.sh

super + t
    st

# Xkill
super + Escape
    xkill

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd && dunstify SXHKD "Config Refreshed!"

#################################################################
# CONTROL + ALT KEYS
#################################################################


#Keyboard dependent


#################################################################
# ALT + ... KEYS
#################################################################

#Wallpaper trash
alt + t
    variety -t

#Wallpaper next
alt + n
    variety -n

#Wallpaper previous
alt + p
    variety -p

#Wallpaper favorite
alt + f
    variety -f

#Wallpaper previous
alt + Left
    variety -p

#Wallpaper next
alt + Right
    variety -n


