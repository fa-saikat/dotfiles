# Scrot-full screen
Print
    sh -e $HOME/.local/bin/utilities/scrnsht
    # scrot '%Y-%m-%d-%s_screenshot_$wx$h.png' -q 90 -e 'mv $f /home/saikat/Pictures/ScreenShots' && dunstify SCREENSHOT "Screen Captured!"

# Scrot-cropped with clipboard
shift + Print
    scrot -q 90 -s -f '%Y-%m-%d-%s_screenshot_$wx$h.png' -e 'mv $f /home/saikat/Pictures/ScreenShots' && dunstify SCREENSHOT "Region Captured!" && paplay /home/saikat/.config/dunst/sounds/camera-shutter.oga

    # scrot '%Y-%m-%d-%s_screenshot_$wx$h.png' -q 100 -s -f -e 'mv $f /home/saikat/pic/Screenshots/Cropped'


