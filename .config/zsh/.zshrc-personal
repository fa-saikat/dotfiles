# Fuzzy Change dir
fd(){
    cd "$(find ~/ -type d | fzf)"
}

# Fuzzy Edit
ff(){
    # xdg-open "$(find ~/ -type f | fzf)"
    $EDITOR "$(find ~/ -type f | fzf)"
}

# Change & list dir
altercd() {
    cd() {
        unset -f cd
        cd "$@" && lsd --group-dirs first
        altercd
    }
}; altercd

# Browsing packages with additional info
pkginfo(){
    paru -Qq | fzf --preview 'pacman -Qil {}' --layout=reverse --bind 'enter:execute(pacman -Qil {} | less)'
}

# overview
overview(){
    du -h --max-depth=1 | sed -r '
    $d; s/^([.0-9]+[KMGTPEZY]\t)\.\//\1/
    ' | sort -hr | column
}


