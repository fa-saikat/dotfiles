COMPILER="clang -Wall -lm -v"
FILE="$1"
OUTPUT=$(echo $1 | rev| cut -c 3- | rev )
# echo $FILE
# echo $OUTPUT

# $COMPILER $FILE -o ../exe/"$OUTPUT" 2> ../log/"$OUTPUT".log
$COMPILER $FILE -o ../exe/"$OUTPUT" 2> >(tee ../log/"$OUTPUT".log) # 2> >(tee -a ../log/"$OUTPUT".log >&2)
./../exe/$OUTPUT | tee ../out/"$OUTPUT".out

